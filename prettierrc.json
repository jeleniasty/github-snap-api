{
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.java",
      "options": {
        "useTabs": true
      }
    },
    {
      "files": ["*.ts", "*.html", "*.scss", "*.js"],
      "options": {
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 140,
        "quoteProps": "as-needed",
        "arrowParens": "avoid"
      }
    }
  ]
}
